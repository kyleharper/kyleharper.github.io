{
	"name": "kyleharper.co.uk",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"build": "pnpm run build:css && remix vite:build",
		"build:css": "tailwindcss -m -i ./app/tailwind.css -o app/tailwind-o.css",
		"deploy": "pnpm run build && wrangler pages deploy",
		"dev": "concurrently \"pnpm run dev:css\" \"remix vite:dev\"",
		"dev:css": "tailwindcss -w -i ./app/tailwind.css -o app/tailwind-o.css",
		"check": "biome check --apply ./*",
		"start": "wrangler pages dev ./build/client",
		"typecheck": "tsc",
		"typegen": "wrangler types",
		"preview": "pnpm run build && wrangler pages dev"
	},
	"dependencies": {
		"@mdx-js/rollup": "^3.0.1",
		"@remix-run/react": "^2.9.2",
		"@remix-run/cloudflare": "^2.9.2",
		"@remix-run/cloudflare-pages": "^2.9.2",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"recma-export-filepath": "^1.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.7.3",
		"@cloudflare/workers-types": "^4.20240605.0",
		"@remix-run/dev": "^2.9.2",
		"@tailwindcss/typography": "^0.5.13",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"concurrently": "^8.2.2",
		"tailwindcss": "^3.4.3",
		"typescript": "^5.4.5",
		"vite": "^5.2.12",
		"vite-tsconfig-paths": "^4.3.2",
		"wrangler": "^3.59.0"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
