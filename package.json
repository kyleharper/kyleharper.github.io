{
  "name": "kyleharper.co.uk",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "npm run build:css && remix vite:build",
    "build:css": "tailwindcss -m -i ./app/tailwind.css -o app/tailwind-o.css",
    "dev": "concurrently \"npm run dev:css\" \"remix vite:dev\"",
    "dev:css": "tailwindcss -w -i ./app/tailwind.css -o app/tailwind-o.css",
    "format": "prettier --write .",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "http-server -p 3000 build/client/",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@mdx-js/rollup": "^3.0.1",
    "@remix-run/node": "^2.8.1",
    "@remix-run/react": "^2.8.1",
    "http-server": "^14.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recma-export-filepath": "^1.1.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.8.1",
    "@tailwindcss/typography": "^0.5.12",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0",
    "vite": "^5.2.9",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
