---
import BaseLayout from './BaseLayout.astro';
import Header from '~/components/Header.astro';
import Footer from '~/components/Footer.astro';

interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
---

<BaseLayout title={title} description={description}>
	<article
		class="w-full prose-h2:text-3xl prose-headings:tracking-tight prose-blockquote:bg-slate-50 prose-blockquote:border-slate-300 prose-blockquote:px-10 prose-blockquote:py-2"
	>
		<Header />
		<slot />
		<Footer />
	</article>
</BaseLayout>
